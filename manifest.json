{
  "manifest_version": 3,
  "name": "Trailhead Module Finisher",
  "version": "2.3",
  "description": "Runs a script to mark modules and trails as complete on Trailhead pages.",
  "content_scripts": [
    {
      "matches": [
        "https://trailhead.salesforce.com/users/*/trailmixes/*",
        "https://trailhead.salesforce.com/content/learn/*",
        "https://trailhead.salesforce.com/today",
        "https://www.salesforce.com/trailblazer/profile"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}